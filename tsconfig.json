{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"allowJs": false,
		"checkJs": false,
		"skipLibCheck": true,
		"noEmit": false,
		"sourceMap": true,

		"lib": ["ESNext", "DOM"],
		"baseUrl": ".",

		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noUncheckedIndexedAccess": true
	},
	"exclude": ["node_modules"]
}
